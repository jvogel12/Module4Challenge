@page
@model Module4Challenge.Pages.DadJokesModel
@{
    ViewData["Title"] = "Dad Joke Generator";
}

<div class="container mt-4">

    <!-- Page Heading -->
    <h1 class="text-center mb-3">Dad Joke Generator</h1>

    <!-- Loop through jokes -->
    <div class="row">
        @foreach (var joke in Model.CurrentJokes)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Dad Joke</h5>
                        <p class="card-text">@joke</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Button to get more jokes -->
    <form method="post" class="text-center mt-4">
        <button type="submit" class="btn btn-primary">
            Get More Jokes
        </button>
    </form>

</div>